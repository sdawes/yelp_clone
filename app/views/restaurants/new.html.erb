<h1>Restaurant.new page</h1>

<% if @restaurant.errors.any? %>
  <section id="errors">
    <h2><%= pluralize(@restaurant.errors.count, "error")%>. restaurant not saved: </h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit 'Create Restaurant'%>
<% end %>
